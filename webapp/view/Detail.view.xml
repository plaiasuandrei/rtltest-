<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="rtl.controller.Detail">
	<semantic:DetailPage xmlns:semantic="sap.m.semantic" title="{i18n>detailTitle}" id="page" busyIndicatorDelay="{detailView>/delay}" busy="{detailView>/busy}" showNavButton="{device>/system/phone}" navButtonPress="onNavBack">
		<semantic:content>
			<ObjectHeader xmlns="sap.m" title="{RdVendorName}" id="detailObjectHeader" visible="{detailView>/isDetailObjectHeaderVisisble}" condensed="true" numberUnit="{Waers}" number="{ path: 'Wrbtr', formatter: '.formatter.currencyValue' }">
				<attributes>
					<ObjectAttribute id="__attribute6" text="{Sgtxt}" active="false" />
				</attributes>
			</ObjectHeader>
			<IconTabBar xmlns="sap.m" id="iconTabBar" class="sapUiResponsiveContentPadding" select="onTabSelect">
				<items>
					<IconTabFilter id="iconTabBarFilter1" tooltip="{i18n>detailIconTabBarInfo}" icon="sap-icon://hint">
						<content>
							<ObjectHeader title="{i18n>itemOverviewTitle}" id="objectHeader_copy">
								<attributes>
									<ObjectAttribute id="__attribute6_copy" text="{/#ocrInvoice/Bukrs/@sap:label}: {Bukrs}" active="false" />
									<ObjectAttribute id="__attribute4" text="{/#ocrInvoice/Ebeln/@sap:label}: {Ebeln}" active="false" />
									<ObjectAttribute id="__attribute7" text="{/#ocrInvoice/PsPosid/@sap:label}: {PsPosid}" active="false" />
									<ObjectAttribute id="__attribute3" text="{/#ocrInvoice/Kostl/@sap:label}: {Kostl}" active="false" />
								</attributes>
							</ObjectHeader>
						</content>
					</IconTabFilter>
					<IconTabFilter id="iconTabBarAttach" tooltip="{i18n>detailIconTabBarAttachments}" icon="sap-icon://attachment" count="1">
						<content>
							<List id="AttachmentList" items="{/ocrInvoiceSet}" showSeparators="None" inset="true" noDataText="Drop list items here">
								<items>
									<StandardListItem title="List Item 1" id="AttachmentListItems" type="Navigation" description="Description text" icon="{parts : [{path : 'pdf'}], formatter : 'model.formatter.formatAttachmentIcon'}" press="onAttachment" iconInset="false" counter="0" /></items>
							</List>
						</content>
					</IconTabFilter>
					<IconTabFilter id="searchFilter" icon="sap-icon://search" count="{detailView>/count}" iconColor="Negative">
						<content>
							<Bar id="__bar0">
								<contentRight>
									<sap.ui.layout:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout" id="__layout1">
										<sap.ui.layout:content>
											<Text id="__text22_copy" text="Search for PO" />
											<Switch id="__switch0" state="true" change="onSwitchChange" />
										</sap.ui.layout:content>
									</sap.ui.layout:HorizontalLayout>
								</contentRight>
								<contentLeft>
									<sap.ui.core:Icon xmlns:sap.ui.core="sap.ui.core" id="__icon0" size="2em" src="sap-icon://message-information" />
								</contentLeft>
							</Bar>
							<sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" id="searchPOLayout" width="100%" visible="{detailView>/displaySearchPOLayout}">
								<sap.ui.layout:content>
									<SearchField id="__field0" placeholder="Search" width="100%" />
									<List id="__list1" items="{ocrInvoiceLSet}" noDataText="Drop list items here" updateFinished="onUpdateFinished">
										<items>
											<CustomListItem id="__item9_copy-__list1-0" type="DetailAndActive" counter="0">
												<content>
													<sap.ui.layout:VerticalLayout id="__layout0_copy-__list1-0" width="100%">
														<sap.ui.layout:content>
															<Text id="__text106___list1" text="{/#ocrInvoice/Ebeln/@sap:label}:{Ebelp}" maxLines="2" />
															<Text id="__text95___list10" text="{/#ocrInvoice/Hkont/@sap:label}" maxLines="2" />
															<Text id="__text106___list8" text="{/#ocrInvoice/Kostl/@sap:label}" maxLines="2" />
															<Text id="__text106_item4" text="{/#ocrInvoice/PsPosid/@sap:label}" maxLines="2" />
														</sap.ui.layout:content>
													</sap.ui.layout:VerticalLayout>
												</content>
											</CustomListItem>
										</items>
									</List>
								</sap.ui.layout:content>
							</sap.ui.layout:VerticalLayout>
							<sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" id="searchCostElementsLayout" width="100%" visible="{detailView>/displaySearchCostElementsLayout}">
								<sap.ui.layout:content>
								    
								    
								    
								    
									<SearchField id="CostCenterSearch" placeholder="Recherche" width="100%" search="onSearch" suggestionItems="{/ZzwdKostSet}" suggest="onCostCenterSuggest" enableSuggestions="true">
										<suggestionItems>
											<SuggestionItem description="{path:'KOSTL'} - {path:'MCTXT'}" />
										</suggestionItems>
									</SearchField>
								
								</sap.ui.layout:content>
							</sap.ui.layout:VerticalLayout>
						</content>
					</IconTabFilter>
					<IconTabFilter id="rejectFilter" icon="sap-icon://sys-cancel-2" iconColor="Critical">
						<content>
							<RadioButtonGroup id="__group0" width="100%" select="onRejectionReassign" selectedIndex="-1">
								<buttons>
									<RadioButton id="__button0" text="Send item back" width="100%" groupName="__group0" textAlign="Right" />
									<RadioButton id="__button1" text="Reassign item to another employee" groupName="__group0" />
								</buttons>
							</RadioButtonGroup>
							<Select id="__select1" width="100%" change="onRejectionReassign" forceSelection="false" selectedKey="default">
								<items>
									<sap.ui.core:ListItem xmlns:sap.ui.core="sap.ui.core" id="__itemNotForMe" text="Item is not for me" key="sendBackItem" />
									<sap.ui.core:ListItem xmlns:sap.ui.core="sap.ui.core" id="__itemReassign" text="Reassign item" key="reassignItem" />
									<sap.ui.core:ListItem xmlns:sap.ui.core="sap.ui.core" id="__itemDefault" text="Select Rejection Reason" key="default" />
								</items>
							</Select>
							<sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" id="__layout2" width="100%" visible="{detailView>/displayEmployeeSearchField}">
								<sap.ui.layout:content>
									<SearchField id="__field2" placeholder="Search" width="100%" />
									<List id="__list2" items="{/ocrInvoiceSet}" noDataText="Drop list items here">
										<items>
											<StandardListItem title="Employee1" id="__item3_copy-__list2-0" type="Navigation" description="Description text" icon="sap-icon://picture" counter="0" />
										</items>
									</List>
								</sap.ui.layout:content>
							</sap.ui.layout:VerticalLayout>
							<sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" id="__layout3" width="100%" visible="{detailView>/displayRejectionConfirmButton}">
								<sap.ui.layout:content>
									<Button id="__button2" type="Reject" text="Confirm Rejection Code" width="100%" />
								</sap.ui.layout:content>
							</sap.ui.layout:VerticalLayout>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>
			<!--			<Table id="lineItemsList" width="auto" items="{ocrInvoiceLSet}" updateFinished="onListUpdateFinished" noDataText="{i18n>detailLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin" visible="false">
				<headerToolbar>
					<Toolbar id="lineItemsToolbar">
						<Title id="lineItemsHeader" text="{detailView>/lineItemListTitle}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>detailLineItemTableIDColumn}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
						<Text text="{i18n>detailLineItemTableUnitNumberColumn}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{Sgtxt}" text="{Buzei}"/>
							<ObjectNumber number="{          path: 'Wrbtr',          formatter: '.formatter.currencyValue'         }" unit="{Waers}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>-->
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress" />
		</semantic:sendEmailAction>
		<semantic:saveAction>
			<semantic:SaveAction id="__action0" />
		</semantic:saveAction>
	</semantic:DetailPage>
</mvc:View>