<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="rtl.controller.Master">
	<semantic:MasterPage xmlns:semantic="sap.m.semantic" title="{masterView>/title}" id="page" navButtonPress="onNavBack" showNavButton="true">
		<semantic:subHeader>
			<Bar xmlns="sap.m" id="headerBar">
				<contentMiddle>
					<SearchField id="searchField" width="100%" tooltip="{i18n>masterSearchTooltip}" showRefreshButton="{= !${device>/support/touch} }"
						search="onSearch" liveChange="onSearch"/>
				</contentMiddle>
			</Bar>
		</semantic:subHeader>
		<semantic:content>
			<PullToRefresh xmlns="sap.m" id="pullToRefresh" visible="{device>/support/touch}" refresh="onRefresh"/>
			<!-- For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}" -->
			<!-- //sorter: { path: 'RdVendorName', descending: false }, -->
			<List xmlns="sap.m" id="list" items="{ path: '/ocrInvoiceSet', groupHeaderFactory: '.createGroupHeader' }"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" selectionChange="onSelectionChange"
				busyIndicatorDelay="{masterView>/delay}" noDataText="{masterView>/noDataText}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished">
				<infoToolbar>
					<Toolbar id="filterBar" visible="{masterView>/isFilterBarVisible}" press="onOpenViewSettings" active="true">
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}"/>
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem title="{RdVendorName}" type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}" press="onSelectionChange"
						number="{ path: 'Wrbtr', formatter: '.formatter.currencyValue' }" numberUnit="{Waers}">
						<attributes>
							<ObjectAttribute id="__attribute8" text="{Sgtxt}" active="false"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
		<semantic:sort>
			<semantic:SortSelect id="sort" selectedKey="{masterView>/sortBy}" change="onSort">
				<core:Item xmlns:core="sap.ui.core" id="masterSort1" text="{i18n>masterSort1}" key="RdVendorName"/>
				<core:Item xmlns:core="sap.ui.core" id="masterSort2" text="{i18n>masterSort2}" key="Wrbtr"/>
				<core:Item xmlns:core="sap.ui.core" id="masterSort3" text="{i18n>masterSort3}" key="None"/>
			</semantic:SortSelect>
		</semantic:sort>
		<semantic:filter>
			<semantic:FilterAction id="filter" press="onOpenViewSettings"/>
		</semantic:filter>
		<semantic:group>
			<semantic:GroupSelect id="group" selectedKey="{masterView>/groupBy}" change="onGroup">
				<core:Item xmlns:core="sap.ui.core" id="masterGroupNone" text="{i18n>masterGroupNone}" key="None"/>
				<core:Item xmlns:core="sap.ui.core" id="masterGroup1" text="{i18n>masterGroup1}" key="Wrbtr"/>
			</semantic:GroupSelect>
		</semantic:group>
	</semantic:MasterPage>
</mvc:View>
